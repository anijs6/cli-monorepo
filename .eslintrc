{
  "root": true,
  "extends": ["@anijs"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".tsx", ".ts", ".js", ".json"]
      },
      "alias": {
        "map": [["@", "./src/"]]
      },
      "typescript": {}
    }
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never",
        "js": "never"
      }
    ],
    "unicorn/filename-case": "off",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}
